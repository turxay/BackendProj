@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Slider";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider List</h4>
                    @if (ViewBag.SliderCount < 5)
                    {
                        <a asp-action="Create" class="btn btn-success">Create New Slider</a>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Slider slide in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/@slide.Image" style="width:100px !important;height:100px !important" alt="image" />
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@slide.Id" class="btn btn-success">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@slide.Id" class="btn btn-primary">
                                                <i class="mdi mdi-table-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@slide.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

