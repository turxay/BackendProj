@model IEnumerable<ProductVM>
@foreach (ProductVM product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
            <div class="img">
                <a href="">
                    <img src="~/img/@product.Image" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@product.Title</h6>
            </div>
            <div class="price">
                <a asp-controller="Home" asp-action="AddBasket" asp-route-id="@product.Id">
                    <span class="text-black-50">Add to cart</span>
                </a>
                
                <span class="text-black-50">@product.Price</span>
            </div>
        </div>
    </div>
}
